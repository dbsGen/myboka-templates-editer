- cache_article_item(object) do
  .article-item
    .top
      .mark
      .title
        %a{href: article_path(object)}= object.title
        .subtitle
          .item
            %span.icon-user
            = name_tag(object.creater, class: 'reversion')
          .item.time
            %span.icon-clock
            = time_progress(object.created_at)
          .item
            %span.icon-bubbles
            = "#{object.comments.size} 评论"
          .item
            %span.icon-thumbs-up
            = "#{object.like_count}赞"
    .content
      - text_clip(object.summary) do |text, imgs|
        = raw text
        %br/
        - imgs.each do |img|
          = raw img
    %a.more{href: article_path(object)} Read More