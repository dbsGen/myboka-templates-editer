.clearfix{style: 'height: 100%'}
  .pull-right{style: 'height: 100%;width:100%;margin-left: -25em'}
    %div{style: 'margin-left: 300px;height:100%'}
      %iframe#viewer{name: 'viewer',src: root_path, style: 'border:none; width:100%;height:99%'}
  .pull-left{style: 'height:100%;width:300px;padding:10px'}
    %form{action: root_path, target: 'viewer', method: 'post', onsubmit: 'return formSubmit(this);'}
      - @settings.each do |setting|
        = edit_setting_tag setting
      %input.btn{type: 'submit', value: '确定'}